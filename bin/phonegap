#!/usr/bin/env ruby

$: << File.join(File.dirname(__FILE__), *%w[.. lib])

require 'optparse'
require 'phonegap'

options = {
  platforms: [],
  configuration: "debug",
  target: "emulator",
  name: "app"
}

opts = OptionParser.new do |opts|
  opts.summary_width = 28
  opts.banner = "Usage: phonegap [OPTIONS] PATH"

  opts.separator ""
  opts.separator "Configuration:"
  
  opts.on("--ios", "Compile iOS applications") do |v|
    options[:platforms] << :ios
  end

  opts.on("--android", "Compile Android applications") do |v|
    options[:platforms] << :android
  end
  
  opts.on("--target [TARGET]", String, "Either 'device' or 'emulator' (optional)") do |v|
    options[:target] = v
  end
  
  opts.on("--configuration [TYPE]", String, "Either 'debug' or 'release' (optional)") do |v|
    options[:configuration] = v
  end
  
  opts.on("--name [NAME]", String, "Application name (optional)") do |v|
    options[:name] = v
  end
  
  opts.separator ""; opts.separator "Miscellaneous:"
  
  opts.on_tail("-?", "--help", "Display this usage information") do
    puts "#{opts}\n"
    exit
  end
  
  opts.on_tail("-v", "--version", "Display version") do |v|
    puts "PhoneGap #{PhoneGap::VERSION}"
    exit
  end
  
  opts.parse!
end

path = ARGV[0]

if path.nil? or options[:platforms].empty?
  puts "#{opts}\n"
  exit
end

PhoneGap.build(path, options)